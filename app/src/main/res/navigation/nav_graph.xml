<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.social.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_productCategoriesFragment"
            app:destination="@id/productCategoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/productCategoriesFragment"
        android:name="com.example.social.presentation.productCategories.ProductCategoriesFragment"
        android:label="fragment_product_categories"
        tools:layout="@layout/fragment_products_categories_list" >
        <action
            android:id="@+id/action_productCategoriesFragment_to_productListFragment"
            app:destination="@id/productListFragment" />
    </fragment>

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.social.presentation.productList.ProductListFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/fragment_product_list">
        <argument
            android:name="products"
            app:argType="com.example.social.data.models.Product"/>
    </fragment>

</navigation>