<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp">

    <TextView
        android:id="@+id/offer_percent"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="4dp"
        android:background="@drawable/cart_coupon_background"
        android:textAppearance="@style/App.TextAppearance.TitleLarge.Dm.Bold"
        android:gravity="center"
        android:text="32\n%"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/offer_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_clear_icon_corner"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/App.TextAppearance.TitleMedium.PlusJakarta"
        android:text="Coupon"
        app:layout_constraintStart_toEndOf="@+id/offer_percent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coupon_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/App.TextAppearance.BodySmall.PlusJakarta"
        android:text="11EWA8U123"
        android:alpha="0.3"
        app:layout_constraintStart_toEndOf="@+id/offer_percent"
        app:layout_constraintTop_toBottomOf="@+id/coupon" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/App.TextAppearance.TitleMedium.Dm.Bold"
        android:text="â‚¹ -1300"
        android:textColor="@color/green_500"
        app:layout_constraintStart_toEndOf="@+id/offer_percent"
        app:layout_constraintTop_toBottomOf="@+id/coupon_number" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/cart_qr_corner"
        android:padding="16dp"
        android:src="@drawable/illustration_qr_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>